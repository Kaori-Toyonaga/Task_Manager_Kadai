<h1><%= @user.name %>のページ</h1>
<p>メールアドレス: <%= @user.email %></p>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>ステータス</th>
      <th>優先順位</th>
      <th>題名</th>
      <th>説明</th>
      <th>終了期限</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td class = "task_list" ><%= task.title %></td>
        <td><%= task.detail %></td>
        <td><%= task.expired_at %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to image_tag('delete.png', size: '15x15'), task, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
