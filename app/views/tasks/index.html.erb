<h1>タスク一覧</h1>
<a><%= link_to '新しいタスク', new_task_path %></a>

<p><%= notice %></p>

<table class="index">
  <tr>
    <th>#</th>
    <th>ラベル</th>
    <th>ステータス</th>
    <th>優先順位</th>
    <th>題名</th>
    <th>説明</th>
    <th>終了期限</th>
    <th>作成者</th>
    <th>作成日</th>
    <th>更新日</th>
  </tr>
  <tr>
  <% @tasks.each do |task| %>
    <td><%= task.id %></td>
    <td>ラベル</td>
    <td>ステータス</td>
    <td>優先順位</td>
    <td><%= task.title %></td>
    <td><%= task.detail %></td>
    <td>終了期限</td>
    <td>作成者</td>
    <td>作成日</td>
    <td>更新日</td>
    <td><%= link_to '詳細', task_path(task.id) %></td>
    <td><%= link_to '削除', task_path(task.id), method: :delete,data: { confirm: '削除しますか？' } %></td>
　</tr>
  <% end %>
</table>
